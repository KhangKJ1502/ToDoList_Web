

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập - TaskMaster</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #f5f7fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            width: 400px;
            padding: 30px;
        }

        .logo {
            text-align: center;
            margin-bottom: 30px;
        }

            .logo h1 {
                color: #4a6cf7;
                font-size: 32px;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                color: #333;
                font-weight: 500;
            }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
            transition: border-color 0.3s;
        }

            .form-control:focus {
                border-color: #4a6cf7;
                outline: none;
            }

        .btn {
            display: block;
            width: 100%;
            padding: 14px;
            background-color: #4a6cf7;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #3d5ce4;
            }

        .links {
            margin-top: 20px;
            text-align: center;
            font-size: 14px;
        }

            .links a {
                color: #4a6cf7;
                text-decoration: none;
                margin: 0 10px;
            }

                .links a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="logo">
            <h1>TaskMaster</h1>
        </div>

        <form>
            <div class="form-group">
                <label for="email">Email hoặc tên đăng nhập</label>
                <input type="text" id="email" class="form-control" placeholder="Nhập email hoặc tên đăng nhập">
            </div>

            <div class="form-group">
                <label for="password">Mật khẩu</label>
                <input type="password" id="password" class="form-control" placeholder="Nhập mật khẩu">
            </div>

            <button type="submit" onclick="loginAccount()" class="btn">Đăng nhập</button>

            <div class="links">
                <a href="#">Quên mật khẩu?</a>
                <a asp-controller="Account" asp-action="RegisterAccount">Đăng ký tài khoản mới</a>
            </div>
        </form>
    </div>
    <script>
        function showToast(message, isSuccess = true) {
            let toast = document.createElement('div');
            toast.innerText = message;
            toast.style.position = 'fixed';
            toast.style.bottom = '30px';
            toast.style.left = '50%';
            toast.style.transform = 'translateX(-50%)';
            toast.style.backgroundColor = isSuccess ? '#28a745' : '#dc3545'; // xanh lá hoặc đỏ
            toast.style.color = '#fff';
            toast.style.padding = '15px 25px';
            toast.style.borderRadius = '8px';
            toast.style.boxShadow = '0 2px 10px rgba(0,0,0,0.2)';
            toast.style.zIndex = '9999';
            toast.style.opacity = '0';
            toast.style.transition = 'opacity 0.5s ease';

            document.body.appendChild(toast);

            setTimeout(() => {
                toast.style.opacity = '1';
            }, 100); // Delay 1 tí để animate đẹp

            setTimeout(() => {
                toast.style.opacity = '0';
                setTimeout(() => {
                    document.body.removeChild(toast);
                }, 500);
            }, 3000); // 3s tự biến mất
        }

        function loginAccount() {
            event.preventDefault(); // Ngăn reload trang khi submit

            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value.trim();

            if (!email || !password) {
                showToast("Vui lòng nhập đầy đủ thông tin!", false);
                return;
            }

            const loginData = {
                email: email,
                password: password
            };

            fetch('api/login', {  // 👉 Đổi thành API login thật của bạn
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(loginData)
            })
            .then(response => response.json())
            .then(data => {
                console.log(data);
                if (data.success) {
                    showToast("Đăng nhập thành công!", true);
                    setTimeout(() => {
                        window.location.href = '/home/index'; // 👉 Chuyển hướng trang sau khi login
                    }, 1500);
                } else {
                    showToast("Đăng nhập thất bại: " + (data.message || "Vui lòng kiểm tra lại."), false);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast("Đã có lỗi xảy ra!", false);
            });
        }
    </script>

</body>
</html>