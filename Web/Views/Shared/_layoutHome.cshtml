<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskMaster</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --primary-color: #4a6cf7;
            --primary-hover: #3d5ce4;
            --text-dark: #333;
            --text-light: #777;
            --bg-light: #f5f7fa;
            --white: #ffffff;
            --shadow-sm: 0 2px 10px rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 15px rgba(0, 0, 0, 0.1);
            --radius-sm: 5px;
            --radius-md: 10px;
            --space-sm: 8px;
            --space-md: 15px;
            --space-lg: 30px;
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: var(--bg-light);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: var(--text-dark);
            line-height: 1.6;
        }

        /* Header styles */
        header {
            background-color: var(--white);
            box-shadow: var(--shadow-sm);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .navbar {
            padding: var(--space-md) 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-brand {
            color: var(--primary-color);
            font-size: 24px;
            font-weight: 700;
            text-decoration: none;
            display: flex;
            align-items: center;
            transition: var(--transition);
        }

            .navbar-brand:hover {
                transform: scale(1.05);
            }

        .navbar-toggler {
            border: none;
            padding: var(--space-sm);
            outline: none;
            background: transparent;
            cursor: pointer;
            display: none;
        }

        .navbar-nav {
            display: flex;
            list-style: none;
        }

        .navbar-collapse {
            display: flex;
            justify-content: space-between;
            flex-grow: 1;
        }

        .navbar-nav .nav-item {
            margin: 0 var(--space-sm);
        }

        .nav-link {
            color: var(--text-dark);
            font-weight: 500;
            transition: var(--transition);
            text-decoration: none;
            padding: var(--space-sm) var(--space-md);
            border-radius: var(--radius-sm);
            display: block;
        }

            .nav-link:hover {
                color: var(--primary-color);
                background-color: rgba(74, 108, 247, 0.1);
            }

        .dropdown-toggle::after {
            display: inline-block;
            margin-left: 0.255em;
            vertical-align: 0.255em;
            content: "";
            border-top: 0.3em solid;
            border-right: 0.3em solid transparent;
            border-bottom: 0;
            border-left: 0.3em solid transparent;
        }

        .dropdown-menu {
            position: absolute;
            background-color: var(--white);
            border-radius: var(--radius-sm);
            box-shadow: var(--shadow-md);
            padding: var(--space-sm) 0;
            min-width: 180px;
            display: none;
            z-index: 1000;
        }

        .dropdown-menu-end {
            right: 0;
            left: auto;
        }

        .dropdown-item {
            display: block;
            width: 100%;
            padding: var(--space-sm) var(--space-md);
            clear: both;
            text-align: inherit;
            white-space: nowrap;
            background-color: transparent;
            border: 0;
            text-decoration: none;
            color: var(--text-dark);
            transition: var(--transition);
        }

            .dropdown-item:hover {
                background-color: rgba(74, 108, 247, 0.1);
                color: var(--primary-color);
            }

        .dropdown-divider {
            height: 0;
            margin: var(--space-sm) 0;
            overflow: hidden;
            border-top: 1px solid #e9ecef;
        }

        /* Show dropdown on hover */
        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
            animation: fadeIn 0.3s;
        }

      

        /* Main content */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 var(--space-md);
            width: 100%;
        }

        main {
            flex: 1;
            padding: var(--space-lg) 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Footer */
        footer {
            margin-top: auto;
            background-color: var(--white);
            box-shadow: var(--shadow-sm);
            padding: var(--space-md) 0;
        }

        .footer a {
            color: var(--primary-color);
            text-decoration: none;
            transition: var(--transition);
        }

            .footer a:hover {
                text-decoration: underline;
            }

        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .col-md-6 {
            flex: 0 0 50%;
            max-width: 50%;
        }

        .text-end {
            text-align: right;
        }

        .me-3 {
            margin-right: var(--space-md);
        }

        /* Common elements */
        .btn {
            display: inline-block;
            padding: var(--space-md) 20px;
            background-color: var(--primary-color);
            color: var(--white);
            border: none;
            border-radius: var(--radius-sm);
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            text-decoration: none;
            text-align: center;
        }

            .btn:hover {
                background-color: var(--primary-hover);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(74, 108, 247, 0.3);
            }

        .btn-outline {
            background-color: transparent;
            border: 1px solid var(--primary-color);
            color: var(--primary-color);
        }

            .btn-outline:hover {
                background-color: var(--primary-color);
                color: var(--white);
            }

        .card {
            background-color: var(--white);
            border-radius: var(--radius-md);
            box-shadow: var(--shadow-md);
            padding: var(--space-lg);
            margin-bottom: var(--space-md);
            transition: var(--transition);
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            }

        .form-group {
            margin-bottom: var(--space-md);
        }

            .form-group label {
                display: block;
                margin-bottom: var(--space-sm);
                color: var(--text-dark);
                font-weight: 500;
            }

        .form-control {
            width: 100%;
            padding: var(--space-md);
            border: 1px solid #ddd;
            border-radius: var(--radius-sm);
            font-size: 16px;
            transition: var(--transition);
        }

            .form-control:focus {
                border-color: var(--primary-color);
                outline: none;
                box-shadow: 0 0 0 3px rgba(74, 108, 247, 0.2);
            }

        /* Guest header/footer styles (for users not logged in) */
        .guest-header {
            text-align: center;
            padding: var(--space-lg) 0;
            background-color: var(--white);
            box-shadow: var(--shadow-sm);
        }

            .guest-header .logo {
                margin-bottom: 0;
            }

                .guest-header .logo h1 {
                    color: var(--primary-color);
                    font-size: 32px;
                    font-weight: 700;
                    margin: 0;
                }

        .guest-footer {
            text-align: center;
            font-size: 14px;
            color: var(--text-light);
            padding: var(--space-md) 0;
            background-color: var(--white);
            box-shadow: var(--shadow-sm);
            margin-top: auto;
        }

        
    </style>
</head>
<body>
    @if (User.Identity.IsAuthenticated) {
        <!-- Header for logged in users -->
        <header>
            <nav class="navbar">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-tasks me-3"></i>TaskMaster
                    </a>
                    <button class="navbar-toggler" type="button" onclick="toggleMenu()">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="navbar-collapse" id="mainNav">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home"></i> Trang chủ
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Task" asp-action="Index">
                                    <i class="fas fa-clipboard-list"></i> Công việc
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Project" asp-action="Index">
                                    <i class="fas fa-project-diagram"></i> Dự án
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Report" asp-action="Index">
                                    <i class="fas fa-chart-bar"></i> Báo cáo
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button">
                                    <i class="fas fa-user-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-id-card"></i> Hồ sơ cá nhân
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Settings">
                                            <i class="fas fa-cog"></i> Cài đặt
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">
                                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    else {
        <!-- Simplified header for guests -->
        <header class="guest-header">
            <div class="container">
                <div class="logo">
                    <h1><i class="fas fa-tasks me-3"></i>TaskMaster</h1>
                </div>
            </div>
        </header>
    }

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @if (User.Identity.IsAuthenticated) {
        <!-- Footer for logged in users -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        &copy; @DateTime.Now.Year - TaskMaster - <a asp-area="" asp-controller="Home" asp-action="Privacy">Quyền riêng tư</a>
                    </div>
                    <div class="col-md-6 text-end">
                        <a href="#" class="me-3">Điều khoản sử dụng</a>
                        <a href="#" class="me-3">Trợ giúp</a>
                        <a href="#">Liên hệ</a>
                    </div>
                </div>
            </div>
        </footer>
    }
    else {
        <!-- Simplified footer for guests -->
        <footer class="guest-footer">
            <div class="container">
                &copy; @DateTime.Now.Year - TaskMaster - <a asp-area="" asp-controller="Home" asp-action="Privacy">Quyền riêng tư</a>
            </div>
        </footer>
    }

    <script>
        function toggleMenu() {
            const nav = document.getElementById('mainNav');
            nav.classList.toggle('show');
        }

    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>